{
  "root": true,
  "ignorePatterns": ["node_modules/", "build/", "dist/", "bin/", "package.json", "src/**/*.spec.*", "rollup.config.js"],
  "extends": [
    "@xylabs"
  ],
  "rules": {
    "import/no-internal-modules": ["warn", {"allow": [
      "**/*.jpg",
      "**/*.png",
      "**/*.svg",
      "react-icons/*",
      "lodash/*",
      "@material-ui/**/*"
    ]}]
  }
}